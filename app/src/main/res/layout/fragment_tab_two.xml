<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:background="@color/main_background_color"
    android:orientation="vertical"
    android:weightSum="10.30">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6.3"
        android:orientation="vertical"
        android:weightSum="10"
        android:background="@drawable/box_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/top_header"
            android:orientation="horizontal"
            android:weightSum="3.1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.1"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="Fields"
                android:textStyle="bold" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Loan 1"
                android:textStyle="bold" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Loan 2"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.9"
            android:layout_marginLeft="4dp"
            android:orientation="horizontal"
            android:weightSum="3.1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.1"
                android:gravity="center"
                android:fontFamily="sans-serif"
                android:text="Principal Amount" />
            <EditText
                android:id="@+id/amount1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:inputType="number"/>
            <EditText
                android:id="@+id/amount2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:inputType="number"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.9"
            android:layout_marginLeft="4dp"
            android:orientation="horizontal"
            android:weightSum="3.1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.1"
                android:gravity="center"
                android:fontFamily="sans-serif"
                android:text="Interest Rate (%)" />
            <EditText
                android:id="@+id/interestRate1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:inputType="numberDecimal"/>
            <EditText
                android:id="@+id/interestRate2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:inputType="numberDecimal"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.9"
            android:layout_marginLeft="4dp"
            android:orientation="horizontal"
            android:weightSum="3.1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_marginLeft="2dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="Tenure" />

            <Spinner
                android:id="@+id/tenureSpinner"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="9dp"
                android:layout_marginTop="6dp"
                android:layout_weight="0.6">

            </Spinner>

            <EditText
                android:id="@+id/tenure1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:inputType="number"/>
            <EditText
                android:id="@+id/tenure2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:inputType="number"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.9"
            android:layout_marginLeft="4dp"
            android:orientation="horizontal"
            android:weightSum="3.1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.1"
                android:gravity="center"
                android:fontFamily="sans-serif"
                android:text="Down payment (Optional)"/>
            <EditText
                android:id="@+id/downPayment1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:inputType="number"/>
            <EditText
                android:id="@+id/downPayment2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:inputType="number"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:orientation="horizontal"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="5dp"
            android:weightSum="2">

            <Button
                android:id="@+id/resetButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/calculate_button"
                android:text="Reset"
                android:textSize="12dp" />

            <Button
                android:id="@+id/compareButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/calculate_button"
                android:text="Compare"
                android:textSize="12dp" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/compareResultHeading"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:textSize="16dp"
        android:textColor="#151B54"
        android:textStyle="bold"
        android:text="Loan Comparison"
        android:visibility="invisible"/>
    <LinearLayout
        android:id="@+id/resultLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:background="@drawable/box_view"
        android:weightSum="3.5"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="8dp"
            android:weightSum="3"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif"
                android:text="Monthly Installment"
                android:textSize="12dp"/>
            <TextView
                android:id="@+id/monthlyInstallment1"
                android:layout_width="0dp"
                android:layout_weight="0.9"
                android:layout_marginLeft="10dp"
                android:gravity="center_horizontal"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textColor="#ff616161"
                android:textSize="12dp"/>
            <TextView
                android:id="@+id/monthlyInstallment2"
                android:layout_width="0dp"
                android:layout_weight="0.9"
                android:layout_marginLeft="10dp"
                android:gravity="center_horizontal"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textColor="#ff616161"
                android:textSize="12dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="7dp"
            android:weightSum="3"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif"
                android:text="Total Interest"
                android:textSize="12dp"/>
            <TextView
                android:id="@+id/totalInterest1"
                android:layout_width="0dp"
                android:layout_weight="0.9"
                android:layout_marginLeft="20dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textColor="#ff616161"
                android:textSize="12dp"/>
            <TextView
                android:id="@+id/totalInterest2"
                android:layout_width="0dp"
                android:layout_weight="0.9"
                android:layout_marginLeft="20dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textColor="#ff616161"
                android:textSize="12dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="7dp"
            android:weightSum="3"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif"
                android:text="Total Amount"
                android:textSize="12dp"/>
            <TextView
                android:id="@+id/totalAmount1"
                android:layout_width="0dp"
                android:layout_weight="0.9"
                android:layout_marginLeft="20dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textColor="#ff616161"
                android:textSize="12dp"/>
            <TextView
                android:id="@+id/totalAmount2"
                android:layout_width="0dp"
                android:layout_weight="0.9"
                android:layout_marginLeft="20dp"
                android:gravity="center_horizontal"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textColor="#ff616161"
                android:textSize="12dp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/resultFooter"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.50"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:weightSum="3"
        android:background="@drawable/result_layout"
        android:orientation="horizontal"
        android:visibility="invisible">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="Difference in Interest paid"
            android:textSize="12dp"/>
        <TextView
            android:id="@+id/differenceInterest"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textColor="#ff616161"
            android:textSize="12dp"/>
    </LinearLayout>

</LinearLayout>