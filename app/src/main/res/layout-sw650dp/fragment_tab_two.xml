<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingRight="8dp"
    android:paddingBottom="10dp"
    android:paddingLeft="8dp"
    android:background="@color/main_background_color"
    android:orientation="vertical"
    android:weightSum="10.50">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6.3"
        android:orientation="vertical"
        android:background="@drawable/box_view"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/top_header"
            android:orientation="horizontal"
            android:weightSum="3.1">
            <TextView
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1.1"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="Fields"
                android:textStyle="bold" />
            <TextView
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Loan 1"
                android:textStyle="bold" />
            <TextView
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Loan 2"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.9"
            android:layout_marginLeft="4dp"
            android:orientation="horizontal"
            android:weightSum="3.1">
            <TextView
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1.1"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif"
                android:text="Principal Amount"
                android:textSize="18dp"/>
            <EditText
                android:id="@+id/amount1"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="1"
                android:inputType="number"/>
            <EditText
                android:id="@+id/amount2"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="center"
                android:inputType="number"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.9"
            android:layout_marginLeft="4dp"
            android:orientation="horizontal"
            android:weightSum="3.1">
            <TextView
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1.1"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif"
                android:text="Interest Rate (%)"
                android:textSize="18dp"/>
            <EditText
                android:id="@+id/interestRate1"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="numberDecimal"/>
            <EditText
                android:id="@+id/interestRate2"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="numberDecimal"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.9"
            android:layout_marginLeft="4dp"
            android:orientation="horizontal"
            android:weightSum="3.1">
            <TextView
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="Tenure"
                android:textSize="18dp"/>
            <Spinner
                android:id="@+id/tenureSpinner"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:gravity="left|center_vertical"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="18dp"
                android:spinnerMode="dropdown"
                android:background="@drawable/dropdown_background">
            </Spinner>
            <EditText
                android:id="@+id/tenure1"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="number"/>
            <EditText
                android:id="@+id/tenure2"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="number"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.9"
            android:layout_marginLeft="4dp"
            android:orientation="horizontal"
            android:weightSum="3.1">
            <TextView
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1.1"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif"
                android:text="Down payment (Optional)"
                android:textSize="18dp"/>
            <EditText
                android:id="@+id/downPayment1"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="number"/>
            <EditText
                android:id="@+id/downPayment2"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="number"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:weightSum="2">
            <Button
                android:id="@+id/resetButton"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_design"
                android:text="Reset"
                android:textSize="18dp" />
            <Button
                android:id="@+id/compareButton"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/button_design"
                android:text="Compare"
                android:textSize="18dp" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/compareResultHeading"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:textSize="18dp"
        android:textColor="#151B54"
        android:textStyle="bold"
        android:text="Loan Comparison"
        android:visibility="invisible"/>

    <LinearLayout
        android:id="@+id/resultLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:background="@drawable/box_view"
        android:visibility="invisible"
        android:weightSum="3.5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="12dp"
            android:orientation="horizontal"
            android:weightSum="3">
            <TextView
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:text="Monthly Installment"
                android:textSize="16dp"/>
            <TextView
                android:id="@+id/monthlyInstallment1"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:layout_marginLeft="10dp"
                android:gravity="center_horizontal"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textColor="#ff616161"
                android:textSize="16dp"/>
            <TextView
                android:id="@+id/monthlyInstallment2"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:layout_marginLeft="10dp"
                android:gravity="center_horizontal"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textColor="#ff616161"
                android:textSize="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="12dp"
            android:orientation="horizontal"
            android:weightSum="3">
            <TextView
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:text="Total Interest"
                android:textSize="17dp"/>
            <TextView
                android:id="@+id/totalInterest1"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:gravity="center_horizontal"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textColor="#ff616161"
                android:textSize="16dp"/>
            <TextView
                android:id="@+id/totalInterest2"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:gravity="center_horizontal"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textColor="#ff616161"
                android:textSize="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="12dp"
            android:orientation="horizontal"
            android:weightSum="3">
            <TextView
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:text="Total Amount"
                android:textSize="17dp"/>
            <TextView
                android:id="@+id/totalAmount1"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:layout_marginLeft="20dp"
                android:gravity="center_horizontal"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textColor="#ff616161"
                android:textSize="16dp"/>
            <TextView
                android:id="@+id/totalAmount2"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:layout_marginLeft="20dp"
                android:gravity="center_horizontal"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textColor="#ff616161"
                android:textSize="16dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/resultFooter"
        android:layout_height="0dp"
        android:layout_weight="0.70"
        android:layout_width="match_parent"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"
        android:background="@drawable/result_footer"
        android:orientation="horizontal"
        android:visibility="invisible"
        android:weightSum="3">
        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1.7"
            android:fontFamily="sans-serif"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="Difference in Interest paid"
            android:textSize="17dp"/>
        <TextView
            android:id="@+id/differenceInterest"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1.3"
            android:layout_marginLeft="50dp"
            android:gravity="center"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textColor="#ff616161"
            android:textSize="16dp"/>
    </LinearLayout>

</LinearLayout>